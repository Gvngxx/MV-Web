<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://openbox.org/ file:///usr/share/openbox/menu.xsd">
    <menu id="root-menu" label="Openbox 3">
        <item label="Firefox">
            <action name="Execute">
                <execute>/usr/bin/firefox</execute>
            </action>
        </item>
        <separator />
        <item label="Terminal">
            <action name="Execute">
                <execute>/usr/bin/x-terminal-emulator -x neofetch -T Terminal </execute>
            </action>
        </item>
        <separator />
        <item label="NeoVim">
            <action name="Execute">
                <execute>/usr/bin/x-terminal-emulator -T NeoVim -e nvim</execute>
            </action>
        </item>
        <separator />
        <item label="Task">
            <action name="Execute">
                <execute>/usr/bin/x-terminal-emulator -T TaskBar
                 -e htop</execute>
            </action>
        </item>
    </menu>
</openbox_menu>

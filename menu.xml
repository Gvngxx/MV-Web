<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://openbox.org/ file:///usr/share/openbox/menu.xsd">
    <menu id="root-menu" label="Aplicaciones">
        <item label="Firefox">
            <action name="Execute">
                <execute>firefox</execute>
            </action>
        </item>
        <separator />
        <menu id="terminals" label="Terminales">
            <item label="LXTerminal">
                <action name="Execute">
                    <execute>lxterminal</execute>
                </action>
            </item>
            <item label="Terminator">
                <action name="Execute">
                    <execute>terminator</execute>
                </action>
            </item>
            <item label="XTerm">
                <action name="Execute">
                    <execute>xterm</execute>
                </action>
            </item>
        </menu>
        <separator />
        <menu id="development" label="Desarrollo">
            <item label="NeoVim">
                <action name="Execute">
                    <execute>lxterminal -e nvim</execute>
                </action>
            </item>
            <item label="Python 3.11">
                <action name="Execute">
                    <execute>lxterminal -e python</execute>
                </action>
            </item>
            <item label="Java 21">
                <action name="Execute">
                    <execute>lxterminal -e bash -c "java -version; bash"</execute>
                </action>
            </item>
        </menu>
        <separator />
        <menu id="system" label="Sistema">
            <item label="Htop (Monitor de Sistema)">
                <action name="Execute">
                    <execute>lxterminal -e htop</execute>
                </action>
            </item>
            <item label="Neofetch">
                <action name="Execute">
                    <execute>lxterminal -e bash -c "neofetch; bash"</execute>
                </action>
            </item>
            <item label="Gestor de Archivos">
                <action name="Execute">
                    <execute>lxterminal -e bash -c "cd /home/runner/novnc-desktop; bash"</execute>
                </action>
            </item>
        </menu>
        <separator />
        <menu id="settings" label="ConfiguraciÃ³n">
            <item label="Cambiar Fondo">
                <action name="Execute">
                    <execute>lxterminal -e bash -c "echo 'Usa: feh --bg-scale /ruta/a/imagen.jpg'; bash"</execute>
                </action>
            </item>
        </menu>
        <separator />
        <item label="Reconfiguramos Openbox">
            <action name="Reconfigure" />
        </item>
    </menu>
</openbox_menu>

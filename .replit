modules = ["web", "python-3.11", "bash"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["bzip2", "curl", "feh", "firefox", "galculator", "git", "go", "gzip", "hsetroot", "htop", "imagemagick", "jdk21", "jdk8", "lxterminal", "mplayer", "neofetch", "neovim", "nmap", "openbox", "openjdk21", "openssh", "rsync", "terminator", "tigervnc", "tint2", "unzip", "wget", "xdg-utils", "xterm", "zip"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "VNC Desktop"

[[workflows.workflow]]
name = "VNC Desktop"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash -c \"export JAVA_HOME=$(dirname $(dirname $(readlink -f $(which java)))) && export PATH=$JAVA_HOME/bin:$PATH && cd /home/runner/workspace && PYTHONPATH=/home/runner/workspace/.pythonlibs/lib/python3.12/site-packages /home/runner/workspace/.pythonlibs/bin/python3 -m supervisor.supervisord -c supervisord.conf\""
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 39271
externalPort = 3000

[deployment]
deploymentTarget = "vm"
run = ["bash", "-c", "export JAVA_HOME=$(dirname $(dirname $(which java))) && export PATH=$JAVA_HOME/bin:$PATH && cd /home/runner/workspace && supervisord -c supervisord.conf"]
